<h1>Create Heroine:</h1>

<% if flash[:error] %>
    <% flash[:error].each do |err| %>
        <li><%= err %></li><br>
    <% end %>
    <% flash[:error] = nil %>
<% end %>

<%= form_for @heroine do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>
    <%= f.label :super_name %><br>
    <%= f.text_field :super_name %><br><br>
    <%= f.label :power %>
    <%= f.collection_select :power_id, Power.all, :id, :name %>
    
    <%= f.submit %>
<% end %>

<%= button_to "Power not listed? Add new power", new_power_path, method: :get%>
    