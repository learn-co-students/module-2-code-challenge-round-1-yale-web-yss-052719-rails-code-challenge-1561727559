<% if flash[:error] %>
  <% flash[:error].each do |err| %>
    <li><%= err %></li>
  <% end %>
<% end %>

<h1>Create Heroine: </h1>

<%= form_for @heroine do |f| %>
<%= f.label :name %><br>
<%= f.text_field :name %><br>
<%= f.label :super_name %><br>
<%= f.text_field :super_name %><br>
<br><%= f.collection_select :power_id, @powers, :id, :name %><br>
<br><%= f.submit %><br>
<% end %>
