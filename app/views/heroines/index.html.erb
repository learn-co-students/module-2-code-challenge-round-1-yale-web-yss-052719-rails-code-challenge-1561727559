<h2>All Heroines</h2>

<div class="search">
  <b>Search By Superpower:</b>
</div>

<%= form_tag "/heroines", method: :get do %>
    <%= text_field_tag :search %>
    <%= submit_tag "Search" %>
<% end %>

<% if @heroines == [] %>
  <p>Not a valid Superpower!</p>
<% else %>
  <ul>
    <% @heroines.each do |heroine| %>
      <li>
        <%= link_to "#{heroine.super_name}", heroine_path(heroine) %>
      </li>
      <br>
    <% end %>
  </ul>
<% end %>